<div class="flex flex-col items-center justify-center h-screen bg-gray-100">
  <div class="w-full max-w-md">
    <h1 class="text-3xl font-bold text-center mb-8">Forgot your password?</h1>

    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <%= form_with(url: identity_password_reset_path, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "Send password reset email", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
