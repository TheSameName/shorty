
<p class="text-green-500"><%= notice %></p>

<div class="flex justify-between">
  <h1 class="text-2xl font-bold mb-4 text-gray-800 uppercase tracking-wide border-b-2 border-gray-300">Links</h1>
  <%= link_to "New link", new_link_path, class: "inline-block mt-4 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600" %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% @links.each do |link| %>
    <div class="bg-white rounded-lg shadow-md p-4">
      <%= render link %>
      <p class="mt-2">
        <%= link_to "Show this link", link, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

