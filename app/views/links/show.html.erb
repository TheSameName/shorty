<p style="color: green"><%= notice %></p>

<%= render @link %>

<div class="flex items-center">
  <%= link_to "Edit this link", edit_link_path(@link), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <%= link_to "Back to links", links_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  <%= button_to "Destroy this link", @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
</div>
