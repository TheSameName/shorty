<p class="text-red-500"><%= alert %></p>

<h1 class="text-2xl font-bold mb-4">Change your password</h1>

<%= form_with(url: password_path, method: :patch, class: "max-w-md") do |form| %>
  <% if @account.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(@account.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul class="list-disc list-inside">
        <% @account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :password_challenge, class: "block font-bold mb-2" %>
    <%= form.password_field :password_challenge, required: true, autofocus: true, autocomplete: "current-password", class: "w-full px-3 py-2 rounded border border-gray-400", placeholder: "Current password" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, "New password", class: "block font-bold mb-2" %>
    <%= form.password_field :password, required: true, autocomplete: "new-password", class: "w-full px-3 py-2 rounded border border-gray-400", placeholder: "New password (8 characters minimum)" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation, "Confirm new password", class: "block font-bold mb-2" %>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-full px-3 py-2 rounded border border-gray-400", placeholder: "Confirm new password" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save changes", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back", home_path, class: "text-blue-500 hover:text-blue-800" %>
</div>
